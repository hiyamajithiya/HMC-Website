# Database Configuration
# PostgreSQL connection string for Prisma
# Format: postgresql://USER:PASSWORD@HOST:PORT/DATABASE?schema=SCHEMA
DATABASE_URL="postgresql://username:password@localhost:5432/hmc_website?schema=public"

# NextAuth.js Configuration (v5)
# Generate a random secret: openssl rand -base64 32
AUTH_SECRET="your-auth-secret-here"
AUTH_URL="http://localhost:3000"
AUTH_TRUST_HOST="true"

# Email Configuration (Nodemailer)
# Gmail SMTP settings
SMTP_HOST="smtp.gmail.com"
SMTP_PORT="587"
SMTP_USER="your-email@gmail.com"
SMTP_PASS="your-app-specific-password"

# Resend API (for contact form)
RESEND_API_KEY="re_your_resend_api_key_here"

# Email Addresses
EMAIL_FROM="noreply@himanshumajithiya.com"
EMAIL_TO="info@himanshumajithiya.com"

# Google Analytics
NEXT_PUBLIC_GA_MEASUREMENT_ID="G-XXXXXXXXXX"

# File Upload Configuration
# CRITICAL: Set this to a directory OUTSIDE the project to persist uploads across builds!
# Without this, uploaded files go into public/ and are LOST on every rebuild.
# On server, create this dir first: mkdir -p /var/data/hmc-uploads/{images,downloads,blog,documents,resources}
UPLOADS_PATH="/var/data/hmc-uploads"
# Maximum file size in bytes (10MB default)
MAX_FILE_SIZE="10485760"
# Allowed file extensions for document uploads
ALLOWED_FILE_TYPES=".pdf,.doc,.docx,.xls,.xlsx,.jpg,.jpeg,.png"

# Document Encryption
# Generate a secure 64-character hex key: openssl rand -hex 32
# IMPORTANT: Keep this key safe! If you lose it, encrypted documents cannot be decrypted
DOCUMENT_ENCRYPTION_KEY="your-64-character-hex-encryption-key-here"

# Application URLs
NEXT_PUBLIC_SITE_URL="https://www.himanshumajithiya.com"
NEXT_PUBLIC_API_URL="https://www.himanshumajithiya.com/api"

# HMC Club Configuration
# Session timeout in seconds (default: 7 days)
SESSION_MAX_AGE="604800"

# Rate Limiting (optional)
RATE_LIMIT_MAX="100"
RATE_LIMIT_WINDOW="900000"

# Environment
NODE_ENV="development"

# Optional: WhatsApp Business API (if implementing chat widget)
# WHATSAPP_BUSINESS_ID="your-whatsapp-business-id"
# WHATSAPP_PHONE_NUMBER="+919876543210"

# Google Calendar Integration (for appointment booking)
# Create a service account at https://console.cloud.google.com
# Enable Google Calendar API, share your calendar with the service account email
GOOGLE_SERVICE_ACCOUNT_EMAIL="your-service-account@project-id.iam.gserviceaccount.com"
GOOGLE_SERVICE_ACCOUNT_PRIVATE_KEY="-----BEGIN PRIVATE KEY-----\nYOUR_KEY_HERE\n-----END PRIVATE KEY-----\n"
GOOGLE_CALENDAR_ID="your-email@gmail.com"

# Optional: Google reCAPTCHA (for form protection)
# NEXT_PUBLIC_RECAPTCHA_SITE_KEY="your-recaptcha-site-key"
# RECAPTCHA_SECRET_KEY="your-recaptcha-secret-key"

# Optional: Payment Gateway (for future use)
# RAZORPAY_KEY_ID="your-razorpay-key-id"
# RAZORPAY_KEY_SECRET="your-razorpay-key-secret"
