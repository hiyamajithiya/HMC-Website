// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// Client groups for organizing clients
model ClientGroup {
  id        String   @id @default(cuid())
  name      String   @unique
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  users     User[]
}

// User model for client portal
model User {
  id            String    @id @default(cuid())
  email         String?   // Not unique - same email can be linked to multiple users/clients
  loginId       String?   @unique  // Auto-generated: first 4 letters of name + first 2 digits of DOB
  name          String?
  phone         String?
  password      String
  dateOfBirth   DateTime? // Date of birth or date of incorporation
  role          UserRole  @default(CLIENT)
  isActive      Boolean   @default(true)
  services      String[]  @default([]) // Services offered to this client
  groupId       String?
  group         ClientGroup? @relation(fields: [groupId], references: [id])
  emailVerified DateTime?
  image         String?
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt

  documents       Document[]
  documentFolders DocumentFolder[]
  appointments    Appointment[]
  toolPurchases   ToolPurchase[]
  sessions        Session[]
  blogPosts       BlogPost[]

  @@index([email])
  @@index([isActive])
  @@index([role])
  @@index([groupId])
}

enum UserRole {
  ADMIN
  STAFF   // Can only manage users and documents, no blog/tools access
  CLIENT
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@index([expires])
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

// Password reset tokens
model PasswordResetToken {
  id         String   @id @default(cuid())
  identifier String   // Email or loginId
  token      String   @unique
  expires    DateTime
  createdAt  DateTime @default(now())

  @@unique([identifier, token])
  @@index([identifier])
  @@index([expires])
}

// Document folders for organizing documents
model DocumentFolder {
  id          String       @id @default(cuid())
  name        String
  parentId    String?
  parent      DocumentFolder?  @relation("FolderHierarchy", fields: [parentId], references: [id], onDelete: Cascade)
  children    DocumentFolder[] @relation("FolderHierarchy")
  userId      String
  user        User         @relation(fields: [userId], references: [id], onDelete: Cascade)
  documents   Document[]
  createdAt   DateTime     @default(now())
  updatedAt   DateTime     @updatedAt

  @@unique([name, parentId, userId])
}

// Documents for client portal
model Document {
  id            String       @id @default(cuid())
  title         String
  description   String?
  fileName      String
  filePath      String
  fileSize      Int
  fileType      String
  category      DocCategory
  financialYear String?      // Format: "2024-25" (April to March)
  folderId      String?
  folder        DocumentFolder? @relation(fields: [folderId], references: [id], onDelete: SetNull)
  uploadedBy    String
  userId        String
  user          User         @relation(fields: [userId], references: [id], onDelete: Cascade)
  createdAt     DateTime     @default(now())
  updatedAt     DateTime     @updatedAt

  @@index([userId])
  @@index([category])
  @@index([folderId])
  @@index([financialYear])
  @@index([userId, financialYear])
}

enum DocCategory {
  TAX_RETURNS
  AUDIT_REPORTS
  GST_RETURNS
  COMPLIANCE
  INVOICES
  OTHER
}

// Blog posts
model BlogPost {
  id          String      @id @default(cuid())
  title       String
  slug        String      @unique
  excerpt     String
  content     String      @db.Text
  coverImage  String?
  category    BlogCategory
  tags        String[]
  isPublished Boolean     @default(false)
  publishedAt DateTime?
  viewCount   Int         @default(0)
  authorId    String?
  author      User?       @relation(fields: [authorId], references: [id])
  socialPosts SocialPostLog[]
  createdAt   DateTime    @default(now())
  updatedAt   DateTime    @updatedAt

  @@index([isPublished])
  @@index([category])
  @@index([authorId])
  @@index([isPublished, category])
}

// Social media auto-post tracking
model SocialPostLog {
  id         String           @id @default(cuid())
  blogPostId String
  blogPost   BlogPost         @relation(fields: [blogPostId], references: [id], onDelete: Cascade)
  platform   SocialPlatform
  status     SocialPostStatus @default(PENDING)
  postId     String?
  postUrl    String?
  error      String?
  createdAt  DateTime         @default(now())

  @@index([blogPostId])
  @@index([platform])
}

enum SocialPlatform {
  TWITTER
  LINKEDIN
  FACEBOOK
  INSTAGRAM
}

enum SocialPostStatus {
  PENDING
  POSTED
  FAILED
}

enum BlogCategory {
  TAX_UPDATES
  GST_UPDATES
  AUTOMATION_TIPS
  COMPLIANCE
  FFMC_RBI
  GENERAL
}

// Automation Tools
model Tool {
  id               String         @id @default(cuid())
  name             String
  slug             String         @unique
  shortDescription String
  longDescription  String         @db.Text
  version          String         @default("1.0.0")
  category         ToolCategory   @default(OTHER)
  toolType         ToolType       @default(WEB_APP)
  price            Decimal?       @db.Decimal(10, 2)
  licenseType      LicenseType    @default(FREE)
  downloadUrl      String?        // for downloadable tools
  requirements     String[]
  setupGuide       String?        @db.Text
  features         String[]
  downloadCount    Int            @default(0)
  isActive         Boolean        @default(true)
  createdAt        DateTime       @default(now())
  updatedAt        DateTime       @updatedAt

  purchases        ToolPurchase[]
  downloadLeads    DownloadLead[]

  @@index([isActive])
  @@index([category])
  @@index([licenseType])
}

enum ToolCategory {
  DOCUMENT_AUTOMATION
  DATA_PROCESSING
  REDACTION
  TAX_TOOLS
  COMPLIANCE
  UTILITY
  OTHER
}

enum ToolType {
  WEB_APP         // Web application
  DOWNLOADABLE    // Python scripts, Excel tools
  ONLINE          // Web-based tools
  HYBRID          // Both options available
}

enum LicenseType {
  FREE
  ONE_TIME
  ANNUAL
  MONTHLY
}

// Tool purchases/licenses
model ToolPurchase {
  id          String    @id @default(cuid())
  userId      String
  user        User      @relation(fields: [userId], references: [id])
  toolId      String
  tool        Tool      @relation(fields: [toolId], references: [id])
  licenseKey  String    @unique
  purchaseDate DateTime @default(now())
  expiryDate  DateTime?
  amount      Decimal   @db.Decimal(10, 2)
  status      PurchaseStatus @default(ACTIVE)
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
}

enum PurchaseStatus {
  ACTIVE
  EXPIRED
  CANCELLED
  REFUNDED
}

// Contact form submissions
model ContactSubmission {
  id        String   @id @default(cuid())
  name      String
  email     String
  phone     String?
  service   String?
  message   String   @db.Text
  isRead    Boolean  @default(false)
  isReplied Boolean  @default(false)
  createdAt DateTime @default(now())
}

// Newsletter subscribers
model NewsletterSubscriber {
  id           String    @id @default(cuid())
  email        String    @unique
  name         String?
  isActive     Boolean   @default(true)
  subscribedAt DateTime  @default(now())
  unsubscribedAt DateTime?
}

// Appointments
model Appointment {
  id          String           @id @default(cuid())
  userId      String?
  user        User?            @relation(fields: [userId], references: [id])
  name        String
  email       String
  phone       String
  service     String
  date        DateTime
  timeSlot    String
  message     String?          @db.Text
  status      AppointmentStatus @default(PENDING)
  googleEventId String?         // Google Calendar event ID
  calendlyId  String?          // Calendly event ID if integrated
  createdAt   DateTime         @default(now())
  updatedAt   DateTime         @updatedAt
}

enum AppointmentStatus {
  PENDING
  CONFIRMED
  COMPLETED
  CANCELLED
  NO_SHOW
}

// Email OTP verification for contact/appointment forms
model EmailVerification {
  id        String   @id @default(cuid())
  email     String
  otp       String
  otpExpiry DateTime
  verified  Boolean  @default(false)
  purpose   String   // "contact" | "appointment"
  createdAt DateTime @default(now())

  @@index([email, purpose])
  @@index([createdAt])
}

// Compliance calendar events
model ComplianceEvent {
  id          String   @id @default(cuid())
  title       String
  titleGu     String?
  description String?
  dueDate     DateTime
  category    ComplianceCategory
  frequency   String   // Monthly, Quarterly, Annually
  isRecurring Boolean  @default(false)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

enum ComplianceCategory {
  INCOME_TAX
  GST
  ROC
  RBI_FFMC
  TDS
  ADVANCE_TAX
  OTHER
}

// Site settings
model SiteSetting {
  id        String   @id @default(cuid())
  key       String   @unique
  value     String   @db.Text
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

// Downloadable resources for public downloads page
model Download {
  id          String           @id @default(cuid())
  title       String
  description String?
  fileName    String
  filePath    String
  fileSize    Int
  fileType    String           // PDF, Excel, Word, etc.
  category    DownloadCategory
  sortOrder   Int              @default(0)
  isActive    Boolean          @default(true)
  downloadCount Int            @default(0)
  createdAt   DateTime         @default(now())
  updatedAt   DateTime         @updatedAt
}

enum DownloadCategory {
  GUIDES_TEMPLATES
  FORMS
  CHECKLISTS
  TOOLS
  OTHER
}

// Tool download leads - tracks users who download tools
model DownloadLead {
  id           String    @id @default(cuid())
  name         String
  email        String
  phone        String?
  company      String?
  toolId       String
  tool         Tool      @relation(fields: [toolId], references: [id], onDelete: Cascade)
  otp          String?
  otpExpiry    DateTime?
  verified     Boolean   @default(false)
  downloadedAt DateTime?
  createdAt    DateTime  @default(now())
  updatedAt    DateTime  @updatedAt

  @@index([email])
  @@index([toolId])
  @@index([verified])
  @@index([email, verified])
}
